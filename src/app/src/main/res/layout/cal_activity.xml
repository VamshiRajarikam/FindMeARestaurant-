<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundhome">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundhome">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/food"
            android:hint="Enter Food Number"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:textColor="#f9f6f6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewtype"

            android:gravity="left"

            android:textColor="@color/colorPrimary"
            android:background="@drawable/backgroundhome"
            android:layout_below="@+id/button_food"
            android:layout_alignRight="@+id/button_food"
            android:layout_alignEnd="@+id/button_food"
            android:layout_marginTop="62dp"
            android:editable="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:id="@+id/button_food"
            android:onClick="getRhymesNew"
            android:layout_below="@+id/food"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:gravity="left"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/backgroundhome"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textViewtype"
            android:layout_toEndOf="@+id/textViewtype" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/textView2"
            android:layout_below="@+id/button_food"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#fcf9f9"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>

